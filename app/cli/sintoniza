<?php
require_once __DIR__ . '/../config.php';

$db = new Database(SINTONIZA_DB_HOST, SINTONIZA_DB_NAME, SINTONIZA_DB_USER, SINTONIZA_DB_PASS, SINTONIZA_DB_PORT);
$gpodder = new GPodder($db);

if (PHP_SAPI === 'cli') {
	$gpodder->updateAllFeeds(true);
}
echo "Feeds metadata updated successfully at " . date('Y-m-d H:i:s') . "\n";
